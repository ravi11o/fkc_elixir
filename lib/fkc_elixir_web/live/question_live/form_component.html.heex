<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="question-form"
    phx-target={@myself}
    phx-change="validate"
    phx-update="ignore"
    phx-submit="save">
  
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  
    <%= label f, :views %>
    <%= number_input f, :views %>
    <%= error_tag f, :views %>
  
    <%= label f, :description %>
    <%= textarea f, :description, phx_hook: "Editor", rows: "8" %>
    <%= error_tag f, :description %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
